//Grapple is initiated
if state = "shootgrapple"{
        obj_player_grapple.sprite_index = spr_grappling;
        obj_player_grapple.image_speed=0;
        
        aHookFiredAlready = true; //check if it's been fired already
        inCutscene = 1;
        vsp = -16;//shoot upwards
        
        //this makes sure movethrough is solid when the hook comes at it
        if(instance_exists(obj_wall_movethrough)){
            obj_wall_movethrough.allowedthrough = false;
            };
    
        //camera_target = obj_hook;//change camera target

        //collision check
        if(place_meeting(x, y+vsp, obj_static)){
         audio_play_sound(sfx_grapplehit,0,0);
            while(!place_meeting(x,y+sign(vsp),obj_static)){ 
                y+= sign(vsp);
            }
            
            vsp=0;
            state = "grappling";
            
        }
        
        y+=vsp;
     
    
     //If grapple shoots up into the sky and doesn't hit anything
       if(obj_hook.y &lt; room_height - room_height - 100){
            state = "finishgrapple";
        }
        
        
        
       
 }


 if state = "grappling"{
  
    obj_player_grapple.sprite_index = spr_grappling;
        obj_player_grapple.image_speed=0;
   // camera_target = obj_player_parent;
    inCutscene = 1;
    distanceY = obj_player_grapple.y - obj_hook.y;
    
     
   
     if(distanceY &gt;= 30){
        
             obj_player_grapple.vsp = -2;
            obj_player_grapple.y += obj_player_grapple.vsp; 
        
           
        } else {
    //Stops player at the top of tether/grapple
        obj_player_grapple.grav = 0;
        obj_player_grapple.vsp = 0;
    }
     
     
    
        if(instance_exists(obj_wall_movethrough)){
                //if player is at top of grapple height they can jump through
                if(place_meeting(x, y + 30, obj_player_grapple) &amp;&amp; keyboard_check_pressed(vk_space)){
                 obj_wall_movethrough.allowedthrough = true;   
                 obj_wall_movethrough.sprite_index = -1;
                 obj_player_grapple.vsp = -12;
                 state="finishgrapple";
                }
        }
        
    }    
    
            
      

        
 //Returning state, back to normal
 
 if state = "finishgrapple"{
    
   // camera_target = obj_player_parent;
  
    inCutscene = 0;
    obj_player_grapple.grav = 0.4;
    aHookFiredAlready = false;
    state = " ";
    instance_destroy();
    
}



 
