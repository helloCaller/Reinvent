   if(place_meeting(x, y+vsp, obj_static)){
    while(!place_meeting(x,y+sign(vsp),obj_static)){
     y+= sign(vsp);
     }
        vsp=0;
        hookhit = true;
       }
        
     y+=vsp;
     
     if( obj_hook.y &gt; room_height+100){
     state = "finishgrapple";
     }
 }

 //This is while the grappling is happening
 if state = "grappling"{
 
    camera_target = obj_player_parent;
   
    
    distanceY = obj_player_grapple.y - obj_hook.y;
    
        show_debug_message(distanceY);
    
    while(distanceY &gt; 10){
        obj_player_grapple.y -= 10;
        break;
    }
    
    
    //if player moves too far left or right while grappling it disengages
    
    if(obj_player_grapple.hsp &gt; 2 || obj_player_grapple.hsp &lt; -2){
    state = "finishgrapple";
    }
    
    
        
        
        
    
}
        
 
 
 //returning state, back to normal
  
  if state = "finishgrapple"{
    
    camera_target = obj_player_parent;
    obj_player_grapple.inCutscene = 0;
    aHookFiredAlready = false;
    instance_destroy();
    
    state = " ";

}
 


if(hookhit == true){
    if (timer &gt; 0) {
    timer --;
 }
 
    if(timer &lt;= 0){
    hookhit = false;
    timer = 80;
    state = "grappling";
    
    }
}

 
