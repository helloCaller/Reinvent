if state = "shootgrapple"{
//I thought this would stop the player from moving
    obj_player_grapple.inCutscene = 1;
//but I had to add this
if(obj_player_grapple.hsp &gt; 2 || obj_player_grapple.hsp &lt; -2){
    state = "finishgrapple";
    }
    
    
    vsp -=3;
    camera_target = obj_hook;

if place_meeting(x,y+vsp,obj_static){ 
        move_contact_solid(90,-1);
        vsp=0;
        hookhit = true;
       } 
 }
 
 //This is while the grappling is happening
 if state = "grappling"{
 camera_target = obj_player_parent;
 
 
dist = point_distance(x,y, obj_player_parent.x, obj_player_parent.y);

    if(dist &gt; 10){
    obj_player_grapple.y -= 10;
    }else{
    obj_player_grapple.vsp = 0;
    state="finishgrapple";
    }
    
    //if player moves too far left or right while grappling it disengages
    
    if(obj_player_grapple.hsp &gt; 2 || obj_player_grapple.hsp &lt; -2){
    state = "finishgrapple";
    }
    
}
        
 
 
 //returning state, back to normal
  
  if state = "finishgrapple"{
    
    camera_target = obj_player_parent;
    obj_player_grapple.inCutscene = 0;
 
    instance_destroy();
    
    state = " ";

}
 


if(hookhit == true){
    if (timer &gt; 0) {
    timer --;
 }
 
    if(timer &lt;= 0){
    hookhit = false;
    timer = 80;
    state = "grappling";
    
    }
}

 
show_debug_message(state);


y+=vsp;
